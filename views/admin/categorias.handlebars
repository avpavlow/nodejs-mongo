<h2>Lista de Categorias : </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success"> Nova categorias</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{_doc.nome}}</h4>
            <small>Slug: {{_doc.slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_doc._id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
            <form action="/admin/categoria/deletar" method="POST">
                <input type="hidden" name="id" value="{{_doc._id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}