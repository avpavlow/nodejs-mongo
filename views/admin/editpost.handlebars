{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
    <div class="card">
    <div class="card-body">
        <h4>Редактировать сообщение: </h4>
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" name="id" value="{{post._id}}">
            <label for="title">Имя:</label>
            <input type="text" name="title" class="form-control"  value="{{post._doc.title}}" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug"  class="form-control" value="{{post._doc.slug}}" required>
            <label for="description">Описание: </label>
            <input type="text" name="description" class="form-control" value="{{post._doc.description}}" required>
            <label for="content">Содержание: </label>
            <textarea name="content" class="form-control" required>{{post._doc.content}}</textarea>
            <label for="category">Категория: </label>
            <select name="category" class="custom-select">
            {{#each categories}}
                <option value="{{_doc._id}}">{{name}}</option>
            {{else}}
                <option value="0">Нет зарегистрированных категорий</option>
            {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit"> Редактировать пост</button>
        </form>
    </div>
</div>