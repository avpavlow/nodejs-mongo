{{#each errors}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
    <div class="card">
    <div class="card-body">
        <h4>Редактировать сообщение: </h4>
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" name="id" value="{{post._id}}">
            <label for="titulo">Имя:</label>
            <input type="text" name="titulo" class="form-control"  value="{{post.titulo}}" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug"  class="form-control" value="{{post.slug}}" required>
            <label for="descricao">Описание: </label>
            <input type="text" name="descricao" class="form-control" value="{{post.descricao}}" required>
            <label for="conteudo">Содержание: </label>
            <textarea name="conteudo" class="form-control" required>{{post.conteudo}}</textarea>
            <label for="category">Категория: </label>
            <select name="category" class="custom-select">
            {{#each categories}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Нет зарегистрированных категорий</option>
            {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit"> Редактировать пост</button>
        </form>
    </div>
</div>