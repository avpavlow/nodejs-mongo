<h2>Список категорий : </h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success"> Новая категория</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{_doc.nome}}</h4>
            <small>Slug: {{_doc.slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categories/edit/{{_doc._id}}"><button class="btn btn-success mt-4">Редактировать категорию</button></a>
            <form action="/admin/category/deletar" method="POST">
                <input type="hidden" name="id" value="{{_doc._id}}">
                <button type="submit" class="btn btn-danger mt-2">Удалить категорию</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Нет зарегистрированных категорий</h4>
{{/each}}