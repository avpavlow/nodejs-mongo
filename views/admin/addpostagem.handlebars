{{#each errors}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
    <div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Имя:</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug"  class="form-control" required>
            <label for="descricao">Описание: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Содержание: </label>
            <textarea name="conteudo" class="form-control" required></textarea>
            <label for="categoria">Категория: </label>
            <select name="categoria" class="custom-select">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Нет зарегистрированных категорий</option>
            {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit"> Создать сообщение</button>
        </form>
    </div>
</div>