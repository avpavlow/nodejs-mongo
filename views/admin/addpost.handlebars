{{#each errors}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
    <div class="card">
    <div class="card-body">
        <form action="/admin/posts/nova" method="POST">
            <label for="title">Имя:</label>
            <input type="text" name="title" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug"  class="form-control" required>
            <label for="description">Описание: </label>
            <input type="text" name="description" class="form-control" required>
            <label for="content">Содержание: </label>
            <textarea name="content" class="form-control" required></textarea>
            <label for="category">Категория: </label>
            <select name="category" class="custom-select">
            {{#each categories}}
                <option value="{{_doc._id}}">{{_doc.name}}</option>
            {{else}}
                <option value="0">Нет зарегистрированных категорий</option>
            {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit"> Создать сообщение</button>
        </form>
    </div>
</div>