<h1>{{category.name}}</h1>
{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        
        
        <h3>{{_doc.title}}</h3>
        <p>{{_doc.description}}</p>
        <a href="/post/{{slug}}"><button class="btn btn-success">Читать далее</button></a>
        <hr>
        <small>Дата публикации: {{data}}</small>
        
    </div>

</div>
{{else}}
    <h5>Нет сообщений</h5>
{{/each}}